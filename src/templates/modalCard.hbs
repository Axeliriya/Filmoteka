{{#each this}}
<span class="close-modal" data-close></span>
<div class="modal__block-img"><img class="modal__img" src="https://image.tmdb.org/t/p/w500{{this.poster_path}}"
        alt="{{this.original_title}}">
</div>
<div class="description">
    <h1 class="modal__title">{{this.original_title}}</h1>
    <ul class="modal__keys">
        <li class="modal__keyItem">
            <p class="modal__key">Vote / Votes</p>
            <p class="modal__value"><span class="rating">{{this.vote_average}} </span> / {{this.vote_count}}</p>
        </li>
        <li class="modal__keyItem">
            <p class="modal__key">Popularity</p>
            <p class="modal__value">{{this.popularity}}</p>
        </li>
        <li class="modal__keyItem">
            <p class="modal__key">Original Title</p>
            <p class="modal__value">{{this.original_title}}</p>
        </li>
        <li class="modal__keyItem">
            <p class="modal__key">Genre</p>
            <ul class="modal__value genre">
                {{#each genres}}<li class="item-genre">{{this.name}}</li>{{/each}}
            </ul>
        </li>
    </ul>
    <h2 class="modal__about">ABOUT</h2>
    <p class="modal__text">{{this.overview}}</p>
    <div class="modal__button">
        <button class="button is-hidden" type="button" data-id="{{this.id}}" data-action="add-watched"
            data-check="false">add to
            Watched</button>
        <button class="button is-hidden" type="button" data-id="{{this.id}}" data-action="add-queue"
            data-check="false">add to
            queue</button>
    </div>
</div>
{{/each}}