{{#each this}}
<div class="modal__block-img"><img class="modal__img" src="https://image.tmdb.org/t/p/w500{{this.backdrop_path}}"
        alt="{{this.original_title}}">
</div>
<div class="description">
    <h1 class="modal__title">{{this.original_title}}</h1>
    <ul class="modal__keys">
        <li class="modal__key">Vote / Votes
            <p class="modal__value"><span class="rating">{{this.vote_average}}</span> / {{this.vote_count}}</p>
        </li>
        <li class="modal__key">Popularity
            <p class="modal__value">{{this.popularity}}</p>
        </li>
        <li class="modal__key">Original Title
            <p class="modal__value">{{this.original_title}}</p>
        </li>
        <li class="modal__key">Genre
            <p class="modal__value">{{this.popularity}}</p>
        </li>
    </ul>
    <h2 class="modal__about">ABOUT</h2>
    <p class="modal__text">{{this.overview}}</p>
    <button class="button">add to Watched</button>
    <button class="button">add to queue</button>
</div>
{{/each}}